<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Default border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color when pressed -->
            <stroke
                android:width="1dp"
                android:color="#0000FF" /> <!-- Border color when pressed (blue) -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>